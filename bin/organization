#!/usr/bin/env bash

case "${ARGUMENT}" in
"id")
  api_curl GET "/organization/$3"
  ;;

"get")
  api_curl GET "/organization/$3/byname"
  ;;

"list")
  api_curl GET /organization
  ;;

"create")  
  api_curl POST /organization "name=$3"
  ;;

"delete")
  api_curl GET "/organization/$3"
  if [ "${CURL_CODE}" == "200" ]; then
    confirm_delete DELETE "/organization/$3"
  fi
  ;;

*)
  echo "ERROR! Unknown org command. Try: boat org -h"
  exit 1
  ;;
esac

