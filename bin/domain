#!/usr/bin/env bash

case "${ARGUMENT}" in
"id")
  api_curl GET /domain/$3
  ;;

"get")
  api_curl GET /domain/name/$3
  ;;

"list")
  api_curl GET /domain
  ;;

"create")
  api_curl POST /domain name=$3 organization_name=$4
  ;;

"delete")
  api_curl GET /domain/$3
  if [ "${CURL_CODE}" == "200" ]; then
    confirm_delete DELETE /domain/$3
  fi
  ;;

"axfr")
  CURL_SILENT=true
  api_curl GET /domain/axfr/name/$3
  if [ "${CURL_CODE}" == "200" ]; then
    echo "${CURL_RESPONSE}"
  else
    echo_json "${CURL_RESPONSE}"
  fi
  ;;

*)
  echo "ERROR: Unknown domain command! Try: boat domain -h"
  exit 1
  ;;
esac
